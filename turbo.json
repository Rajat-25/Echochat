{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "@repo/db#generate": {
      "cache": false,
      "inputs": ["prisma/schema.prisma"],
      "outputs": ["src/generated/prisma/**"]
    },
    "@repo/db#build": {
      "dependsOn": ["@repo/db#generate"],
      "outputs": ["dist/**"]
    },
     "@repo/ui#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@repo/lib#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@repo/types#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    }
  }
}